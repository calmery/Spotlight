{
  "name": "spotlight",
  "version": "1.0.3",
  "description": "Cyber Crime Prevention Volunteer",
  "author": "Sojo University - Cyber Crime Prevention Volunteer",
  "dependencies": {
    "colors": "1.3.3",
    "cors": "2.8.5",
    "express": "4.17.1",
    "express-session": "1.16.2",
    "passport": "0.4.0",
    "passport-twitter": "1.0.4",
    "twitter": "1.7.1"
  },
  "devDependencies": {
    "electron": "6.0.1",
    "electron-builder": "21.2.0",
    "rimraf": "2.6.3"
  },
  "main": "src",
  "build": {
    "appId": "jp.ac.sojo-u.cis.spotlight",
    "directories": {
      "buildResources": "src",
      "output": "build"
    },
    "files": [
      "src",
      "package.json",
      "package-lock.json"
    ],
    "mac": {
      "category": "public.app-category.business",
      "icon": "src/static/icon.icns",
      "target": "zip"
    },
    "win": {
      "icon": "src/static/icon.icns",
      "target": {
        "arch": "ia32",
        "target": "nsis"
      }
    },
    "productName": "Spotlight",
    "publish": null
  },
  "scripts": {
    "start": "electron .",
    "build": "rimraf build && electron-builder -mw"
  }
}
